<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ResolverDrawerLayout">
        <attr name="android:maxWidth" />
        <attr name="maxCollapsedHeight" format="dimension" />
        <attr name="maxCollapsedHeightSmall" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ResolverDrawerLayout_LayoutParams">
        <attr name="layout_alwaysShow" format="boolean" />
        <attr name="layout_ignoreOffset" format="boolean" />
        <attr name="android:layout_gravity" />
        <attr name="layout_hasNestedScrollIndicator" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwitchBar">
        <attr name="android:textColor" />
        <attr name="switchOnText" format="string" />
        <attr name="switchOffText" format="string" />
    </declare-styleable>

    <declare-styleable name="Design">
        <!-- Alert color, such as error or dangerous action. -->
        <attr name="colorAlert" format="color"/>
        <!-- Safe color, such as a safe state. -->
        <attr name="colorSafe" format="color"/>
        <!-- Warning color, such as a warning text. -->
        <attr name="colorWarning" format="color"/>
        <!-- Inactive color. -->
        <attr name="colorInactive" format="color"/>
        <!-- Color for cards. -->
        <attr name="cardBackground" format="reference"/>

        <!-- Style for SwitchBar -->
        <attr name="switchBarStyle" format="reference" />
        <attr name="switchBarBackgroundNormal" format="color" />
        <attr name="switchBarBackgroundDisabled" format="color" />
    </declare-styleable>

</resources>