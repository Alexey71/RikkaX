<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SwitchBar">
        <attr name="android:textColor" />
        <attr name="switchOnText" format="string" />
        <attr name="switchOffText" format="string" />
    </declare-styleable>

    <declare-styleable name="Design">
        <!-- Alert color, such as error or dangerous action. -->
        <attr name="colorAlert" format="color" />
        <!-- Safe color, such as a safe state. -->
        <attr name="colorSafe" format="color" />
        <!-- Warning color, such as a warning text. -->
        <attr name="colorWarning" format="color" />
        <!-- Inactive color. -->
        <attr name="colorInactive" format="color" />
        <!-- Color for cards. -->
        <attr name="cardBackground" format="reference" />

        <!-- Style for SwitchBar -->
        <attr name="switchBarStyle" format="reference" />
        <attr name="switchBarBackgroundNormal" format="color" />
        <attr name="switchBarBackgroundDisabled" format="color" />

        <attr name="outlineButtonStyle" format="reference" />
        <attr name="outlineButtonBackground" format="reference" />
        <attr name="outlineButtonForeground" format="reference" />

        <attr name="borderViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="RaisedView">
        <attr name="state_raised" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BorderView">
        <attr name="borderTopDrawable" format="reference" />
        <attr name="borderBottomDrawable" format="reference" />
        <attr name="borderTopStyle" format="enum">
            <enum name="never" value="0" />
            <enum name="whenTop" value="1" />
            <enum name="whenContentScrolled" value="2" />
            <enum name="always" value="3" />
        </attr>
        <attr name="borderBottomStyle" format="enum">
            <enum name="never" value="0" />
            <enum name="whenBottom" value="1" />
            <enum name="whenContentScrolled" value="2" />
            <enum name="always" value="3" />
        </attr>
    </declare-styleable>

</resources>